@* Define model *@
@model IEnumerable<Racun>

@* Define ViewData *@
@{
	ViewData["Title"] = "Lista Racuna";
}

@* Write Code *@
<div class="row">
	<div class="col-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.RacunId)</th>
					<th>@Html.DisplayNameFor(model => model.Datum)</th>
					<th>@Html.DisplayNameFor(model => model.RadnikUser)</th>
					<th>@Html.DisplayNameFor(model => model.Cena)</th>
					<th>@Html.DisplayNameFor(model => model.Pib)</th>

					<th>Akcije</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.RacunId)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Datum)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.RadnikUser)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Cena)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Pib)
						</td>

						<td class="align-middle">							
							<a class="btn btn-outline-info" asp-action="Info" asp-route-id="@item.RacunId"><i class="breadcrumb-item bi-eye"></i>Info </a>
							<a class="btn btn-outline-danger" asp-action="Storno" asp-route-id="@item.RacunId"><i class="breadcrumb-item bi-trash"></i>Storniraj </a>
						</td>
					</tr>
				}

			</tbody>


		</table>
		

	</div>
</div>
@* Define model *@
@model IEnumerable<Racun>

@* Define ViewData *@
@{
	ViewData["Title"] = "Lista Racuna";
}

@* Write Code *@
<div class="row">
	<div class="col-8 offset-md-2">
		<a asp-action="Index" class="btn btn-outline-primary">Svi Racuni</a>
		<div class="text-white float-end">
			<form asp-action="PronadjiRacun">
				<input type="text" name="id" id="id" class="form-control-sm " placeholder="Racun ID"/>
			
				<button type="submit" class="btn btn-info"><i class="bi-search"></i></button>
			</form>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Racun ID</th>
					<th>Datum</th>
					<th>Radnik</th>
					<th>Cena</th>
					<th>PIB</th>

					<th>Akcije</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.RacunId)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Datum)
						</td>
						<td class="align-middle">
							@item.Radnik.Ime
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Cena)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Pib)
						</td>

						<td class="align-middle">							
							<a class="btn btn-outline-info" asp-action="Info" asp-route-id="@item.RacunId"><i class="breadcrumb-item bi-eye"></i>Info </a>
							<a class="btn btn-outline-danger" asp-action="Storno" asp-route-id="@item.RacunId"><i class="breadcrumb-item bi-trash"></i>Storniraj </a>
						</td>
					</tr>
				}

			</tbody>


		</table>
		

	</div>
</div>
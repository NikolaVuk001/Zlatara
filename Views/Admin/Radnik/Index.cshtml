@using Microsoft.AspNetCore.Identity
@* Define model *@
@model IEnumerable<IdentityRadnik>

@* Define ViewData *@
@{
	ViewData["Title"] = "Lista Radnika";
}

@* Write Code *@
<div class="row">
	<div class="col-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Ime)</th>
					<th>@Html.DisplayNameFor(model => model.Prezime)</th>
					<th>@Html.DisplayNameFor(model => model.UserName)</th>
					<th>Pozicija</th>
					<th>Akcije</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Ime)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Prezime)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.UserName)
						</td>
						<td class="align-middle">
							@item.Pozicija
						</td>
						<td class="align-middle">
							@if(item.UserName != User.Identity.Name)
							{
								<a class="btn btn-outline-danger" asp-action="Obrisi" asp-route-id="@item.Id"><i class="breadcrumb-item bi-trash"></i>Obrisi Radnika </a>
							}							
						</td>
					</tr>
				}

			</tbody>


		</table>
		
		<div class="text-white float-end">
			<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success">
				<i class="bi bi-plus-circle"></i> Dodaj Radnika
			</a>
		</div>

	</div>
</div>

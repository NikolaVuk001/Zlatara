@* Define model *@
@model IEnumerable<Radnik>

@* Define ViewData *@
@{
	ViewData["Title"] = "Lista Racuna";
}

@* Write Code *@
<div class="row">
	<div class="col-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Ime)</th>
					<th>@Html.DisplayNameFor(model => model.Prezime)</th>
					<th>@Html.DisplayNameFor(model => model.User)</th>
					<th>@Html.DisplayNameFor(model => model.Password)</th>

					<th>Akcije</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Ime)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Prezime)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.User)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Password)
						</td>

						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-action="Izmeni" asp-route-id="@item.User"><i class="breadcrumb-item bi-pencil-square"></i>Izmeni </a>
							<a class="btn btn-outline-danger" asp-action="Obrisi" asp-route-id="@item.User"><i class="breadcrumb-item bi-trash"></i>Izbrisi </a>
						</td>
					</tr>
				}

			</tbody>


		</table>
		<div class="text-white float-end">
			<a asp-controller="Radnik" asp-action="Dodaj" class="btn btn-success">
				<i class="bi bi-plus-circle"></i> Dodaj Radnika
			</a>
		</div>

	</div>
</div>
@* Define model *@
@model IEnumerable<Artikal>

@* Define ViewData *@
@{
	ViewData["Title"] = "Lista Artikala";
}

@* Write Code *@



<div class="row">
	<div class="col-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.ArtikalId)</th>
					<th>@Html.DisplayNameFor(model => model.NazivArtikla)</th>
					<th>@Html.DisplayNameFor(model => model.KolicinaNaStanju)</th>
					<th>@Html.DisplayNameFor(model => model.Cena)</th>
					<th>@Html.DisplayNameFor(model => model.Materijal)</th>
					<th>@Html.DisplayNameFor(model => model.Kategorija)</th>
					<th>@Html.DisplayNameFor(model => model.Gramaza)</th>
					<th>@Html.DisplayNameFor(model => model.Brend)</th>

					<th>Akcije</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.ArtikalId)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.NazivArtikla)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.KolicinaNaStanju)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Cena)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Materijal)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Kategorija.Naziv)
						</td>

						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Gramaza)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Brend.Naziv)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-action="Izmeni" asp-route-id="@item.ArtikalId"><i class="breadcrumb-item bi-pencil-square"></i>Izmeni </a>
							<a class="btn btn-outline-info" asp-action="Info" asp-route-id="@item.ArtikalId"><i class="breadcrumb-item bi-eye"></i>Info </a>
							<a class="btn btn-outline-danger" asp-action="Obrisi" asp-route-id="@item.ArtikalId"><i class="breadcrumb-item bi-trash"></i>Izbrisi </a>
						</td>
					</tr>
				}

			</tbody>


		</table>
		<div class="text-white float-end">
			<a asp-controller="Artikal" asp-action="Dodaj" class="btn btn-success">
				<i class="bi bi-plus-circle"></i> Dodaj Artikal
			</a>
		</div>

	</div>


</div>


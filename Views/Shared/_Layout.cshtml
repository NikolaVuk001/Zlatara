<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zlatara3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Zlatara3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/toester.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">Zlatara</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button">Admin</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Artikal" asp-action="Index">Artikli</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Racun" asp-action="Index">Racuni</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Racun" asp-action="StornoRacuni">Stornirani Racuni</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Radnik" asp-action="Index">Radnici</a>
                            </div>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Prodaja" asp-action="Index">Prodaja</a>
                        </li>
                        <li class="nav-item text-end">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">Logout</a>
                        </li>
                        
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            <partial name="_Notifikacija" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2024 - Zlatara3
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
